@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.Artist;
    int counter = 1;
}

@section scripts {
    <script src="~/Content/js/Playlist.js"></script>
    <script src="~/Content/js/AudioPlayer.js"></script>
}

@section head {
    <link rel="stylesheet" href="~/Content/css/profile.css" /> 
}

<div class="row">
    <div class="col-md-4">
        <h4>Top Tracks</h4>
        <h6>Brought to you by Spotify</h6>
        <table id="topTracks" class="table" style="border:none;">
            <tbody>
                @foreach (var track in Model) {
                    <tr>                        
                        <!--<i id="playButton" class="fa fa-play-circle-o" aria-hidden="true"></i> -->
                        <td><span id="trackNo">@(counter++)</span></td>
                        <td><a href="@track.previewurl">@track.name</a></td>
                        <td><i class="fa fa-list" aria-hidden="true"></i></td>
                        <td><i class="fa fa-heart-o" aria-hidden="true"></i></td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="audioPlayer">
            <div class="">
                <span class="" id="npAction">Paused...</span>
                <br />
                <span class="" id="npTitle"></span>
                <br />
                <img width="100" height="100" src="https://cdn3.iconfinder.com/data/icons/music-and-sound/512/vinyl_disc_audio_record_dj_gramophone_album_flat_icon-512.png"/>
            </div>
            <div class="player">
                <audio src="" controls id="audioPlayer">
                    Sorry, your browser does not support HTML5
                </audio>
            </div>
            <div id="playlistNavigation">
                <a id="btnPrev">&laquo;</a>
                <a id="btnNext">&raquo;</a>
            </div>
        </div> <!-- /audioPlayer -->

    </div>
</div>